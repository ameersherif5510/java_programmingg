import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int a = s.nextInt();
        int b = s.nextInt();
        int c = s.nextInt();
        int d = s.nextInt();
        int e = s.nextInt();
        double area=((0.5)*a*b);
        double f=c+d+e;
        System.out.printf("Area of Triangle is %.2f\n",area);
        System.out.printf("Perimeter of Triangle is %.2f",f);
    }
}
